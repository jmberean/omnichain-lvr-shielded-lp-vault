specVersion: 0.0.6
schema:
  file: ./schema.graphql

dataSources:
  - kind: ethereum
    name: Vault
    network: unichain-sepolia
    source:
      address: "0xe215e84edcda4b3fef0533964055a4c76b9ec51d"   # <— set me, lowercase
      abi: Vault
      startBlock: 28545840                          # <— near your first tx to sync fast
    mapping:
      kind: ethereum/events
      apiVersion: 0.0.7
      language: wasm/assemblyscript
      entities:
        - ModeApplied
        - LiquidityAction
      abis:
        - name: Vault
          file: ./abis/Vault.json
      eventHandlers:
        - event: ModeApplied(indexed bytes32,uint8,uint64,string,int24,int24)
          handler: handleModeApplied
        - event: LiquidityAction(indexed bytes32,uint8,int24,int24,uint64,string)
          handler: handleLiquidityAction
      file: ./src/mapping.ts

  - kind: ethereum
    name: Hook
    network: unichain-sepolia
    source:
      address: "0xe215e84edcda4b3fef0533964055a4c76b9ec51d"     # <— set me, lowercase
      abi: Hook
      startBlock: 28545920                           # <— near your demo tx
    mapping:
      kind: ethereum/events
      apiVersion: 0.0.7
      language: wasm/assemblyscript
      entities: [AdminAction]
      abis:
        - name: Hook
          file: ./abis/Hook.json
      eventHandlers:
        - event: AdminApplyModeForDemo(indexed bytes32,uint8,uint64,string)
          handler: handleAdminApplyModeForDemo
      file: ./src/hook.ts
